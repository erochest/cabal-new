-- Initial cabal-new.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                cabal-new
version:             0.3.2.0
synopsis:            A utility to bootstrap new Haskell projects.
-- description:         
license:             Apache-2.0
license-file:        LICENSE
author:              Eric Rochester
maintainer:          erochest@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
data-files:          templates/env.mustache
                   , templates/gitignore
                   , templates/Guardfile.mustache
                   , templates/README.md.mustache
                   , templates/ctags
                   , templates/specs.cabal.mustache
                   , templates/repo.cabal.mustache
                   , templates/Specs.hs
                   , templates/Makefile
                   , templates/project.vim
                   , templates/Main.hs
cabal-version:       >=1.10

executable cabal-new
  main-is:             CabalNew.hs
  other-modules:       CabalNew.Cabal
                     , CabalNew.Files
                     , CabalNew.Git
                     , CabalNew.Opts
                     , CabalNew.Templates
                     , CabalNew.Types
                     , CabalNew.Utils
                     , Paths_cabal_new
  default-language:    Haskell2010
  build-depends:       base >=4.6 && <4.8
                     , shelly
                     , optparse-applicative
                     , classy-prelude
                     , text
                     , system-filepath
                     , system-fileio
                     , hastache
                     , bytestring
                     , transformers

